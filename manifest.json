{
  "manifest_version": 2,
  "name": "Choice Maker",
  "version": "0.1.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"],
      "css": ["popup.css"]
    }
  ],
  "author": "damengrandom",
  "description": "a choice maker tool, such as help you to decide where you can go for lunch ..", 
  "icons": {
    "128": "favicon.png",
    "48": "favicon.png",
    "16": "favicon.png"
  },
  "browser_action": {
    "default_icon": "favicon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ]
}
